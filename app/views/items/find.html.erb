<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Item name</th>
      <th>Price</th>
      <th>Description</th>
      <th>User</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <% item_owner = User.find(item.user_id) %>
      <tr>
        <td><%= item.item_name %></td>
        <td><%= item.price %></td>
        <td><%= item.description %></td>
        <td><a href='/users/<%= item_owner.id %>'><%= item_owner.full_name %></a></td>
        <td><%= link_to 'Show', item %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
